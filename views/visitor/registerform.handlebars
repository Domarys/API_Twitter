<form class="" action="/visitor/register_sub" method="POST">
  <div class="form-group">
    <label for="posting">Username </label>
      <input class="form-control" type="text" name="username" value="" placeholder="Mary Summers" required>
      <br>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="posting">Password </label>
        <input class="form-control" type="password" name="password" value="" autocomplete="off" required>
        <br>
    </div>
    <div class="form-group col-md-6">
      <label for="posting">Confirm password </label>
        <input  class="form-control" type="password" name="password2" value="" autocomplete="off" required>
        <br>
    </div>
  </div>
  <div class="form-group col-md-6">
    <label for="posting">Email </label>
      <input class="form-control" type="text" name="email" value="" placeholder="mary@mail.com" required>
      <br>
  <div class="">
    <button class="btn btn-primary">Save</button>
  </div>
</form>
